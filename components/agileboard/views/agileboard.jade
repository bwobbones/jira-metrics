rd-loading(ng-show='loading')
.row(ng-hide='loading')
  .col-md-4(ng-repeat='column in config.agileColumns')
    .table-responsive
      table.table.table-striped.table-bordered.table-hover
        thead
          tr
            th {{issues.length}} {{column.name}}
          tbody
            tr(ng-repeat='issue in issues = (jiras.issues | statusIn:column.statuses)')
              td
                .row
                  img.img-rounded.pull-right(ng-src='{{issue.fields.assignee.avatarUrls.48x48}}', title='{{issue.fields.assignee.displayName}}', style='margin: 7px;')
                  img(ng-src='{{issue.fields.issueType.iconUrl}}', title='{{issue.fields.issueType.name}}', style='margin-right: 5px;')
                  a(href='{{config.jiraHostName}}/browse/{{ issue.key }}', target='_blank') {{ issue.key }}
                  br
                  img(ng-src='{{issue.fields.priority.iconUrl}}', title='{{issue.fields.priority.name}}', style='margin-right: 5px;')
                  | {{ issue.fields.summary }}
                .row
                  .badge(ng-show='issue.fields.customfield_10494', title='{{issue.fields.customfield_10494}} Story Points') {{issue.fields.customfield_10494}}
                  .label.label-success.pull-right(ng-show='issue.fields.subtasks', title='{{listSubtasks(issue)}}') {{issue.fields.subtasks.length}} Subtasks
