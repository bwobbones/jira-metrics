.row(ng-hide="loaded")
  .col-md-12
    img(src="img/loader.gif", style="margin-top: 15px; margin-right: 15px; float: left;")
    h2 Loading JIRAs...

.row(ng-show="loaded")
  .col-md-12
    rd-widget
      rd-widget-header(icon="fa-group", title="Who's in this Week?")
        a(href="#") {{stat.people.length}} People
      rd-widget-body.large.no-padding
        img.img-thumbnail(ng-repeat="person in stat.people", src="{{person.avatarUrls.48x48}}", title="{{person.displayName}}")
  .col-md-12
    rd-widget
      rd-widget-header(icon="fa-clock-o", title="Current Sprint")
      rd-widget-body.medium.no-padding
        .row
          .col-md-4
            .table-responsive
              table.table.table-striped.table-bordered.table-hover
                thead
                  tr
                    th TODO ({{open.length}})
                  tbody
                    tr(ng-repeat="issue in open = (currentSprintJiras.issues | filter:{fields: { status: { name: 'Open' }}})")
                      td
                        img.img-thumbnail(src="{{issue.fields.assignee.avatarUrls.16x16}}", title="{{issue.fields.assignee.displayName}}")
                        a(href='http://jira.is3.c4isr.adi-limited.com:8080/browse/{{ issue.key }}', target="_blank") {{ issue.key }}
                        br
                        {{ issue.fields.summary }}
          .col-md-4
            .table-responsive
              table.table.table-striped.table-bordered.table-hover
                thead
                  tr
                    th In Progress ({{inProgress.length}})
                  tbody
                    tr(ng-repeat="issue in inProgress = (currentSprintJiras.issues | filter:{fields: { status: { name: 'In Progress' }}})")
                      td
                        img.img-thumbnail(src="{{issue.fields.assignee.avatarUrls.16x16}}", title="{{issue.fields.assignee.displayName}}")
                        a(href='http://jira.is3.c4isr.adi-limited.com:8080/browse/{{ issue.key }}', target="_blank") {{ issue.key }}
                        br
                        {{ issue.fields.summary }}
          .col-md-4
            .table-responsive
              table.table.table-striped.table-bordered.table-hover
                thead
                  tr
                    th Done ({{completed.length}})
                  tbody
                    tr(ng-repeat="issue in completed = (currentSprintJiras.issues | filter:{fields: { status: { name: 'Completed' }}})")
                      td
                        img.img-thumbnail(src="{{issue.fields.assignee.avatarUrls.16x16}}", title="{{issue.fields.assignee.displayName}}")
                        a(href='http://jira.is3.c4isr.adi-limited.com:8080/browse/{{ issue.key }}', target="_blank") {{ issue.key }}
                        br
                        {{ issue.fields.summary }}