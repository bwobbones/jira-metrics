.row
  .col-md-12
    rd-widget
      rd-widget-header(icon="fa-group", title="Who's in this Week?")
        a(href="#") {{stat.people.length}} People
      rd-widget-body.large.no-padding(loading="{{!stat}}")
        img.img-thumbnail(ng-repeat="person in stat.people", src="{{person.avatarUrls.48x48}}", title="{{person.displayName}}")
  .col-md-12
    rd-widget
      rd-widget-header(icon="fa-comment-o", title="Activity Stream")
      rd-widget-body.large.no-padding
        feed(src="config.jiraHostName + '/activity?maxResults=5&streams=key+IS+' + config.projects[0] + '&title=Activity%20Stream'")